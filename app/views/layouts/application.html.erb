<!DOCTYPE html>
<html lang="en">
  <head>
    <title>MealPlan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "turbo", type: "module" %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
  <header class="container">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "Meal Planning", root_path, class: "navbar-brand" %>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
          <li><%= link_to "Meal Plans", meal_plans_path %></li>
          <li><%= link_to "Recipes", recipes_path %></li>
          <><%= link_to "Sign out", sign_out_path, data: {
            turbo_method: :delete
        } %>
        <% else %>
          <li><%= link_to "Sign In", sign_in_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>

<section class="container">
  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="flash alert <%= alert_class(key) %>"><%= value %></div>
    <% end %>
  </div>

  <%= yield %>
</section>
  </body>
</html>